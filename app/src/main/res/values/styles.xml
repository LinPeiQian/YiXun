<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="main_menu_style">
        <item name="android:gravity">center</item>
    </style>

    <style name="guide_viewpager_indicator_tv">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--  这个是加入的代码 -->
    <style name="share_pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/share_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/share_out</item>
        <!-- 指定消失的动画xml -->
    </style>


</resources>
